#!/bin/sh
# <alexforsale@yahoo.com>

# check for second monitor
if [ -n "${MONITOR2}" ] &&
       [ "$(xrandr --listmonitors | grep ${MONITOR2} 2>/dev/null)" ]; then
    i3-msg "workspace Networks, move workspace to output $MONITOR2"
    i3-msg "workspace Messaging, move workspace to output $MONITOR2"
    i3-msg "workspace VM, move workspace to output $MONITOR2"
    i3-msg "workspace Games, move workspace to output $MONITOR2"
    i3-msg "workspace Others, move workspace to output $MONITOR2"
fi
